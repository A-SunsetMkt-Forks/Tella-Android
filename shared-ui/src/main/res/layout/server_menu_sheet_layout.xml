<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/drag_anchor_drawable"
    app:behavior_hideable="true"
    android:padding="21dp">

    <TextView
        android:id="@+id/standard_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Tella_Main_White_Text.Bold"
        tools:text="Test "
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/action_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/standard_sheet_title"
        tools:text="TeTestTestTestTestTest "
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/ic_edit_white_24"
        android:drawablePadding="16dp"
        android:textFontWeight="400"
        android:lineHeight="21dp"
        android:textColor="@color/wa_white"
        android:fontFamily="@font/open_sans"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_edit"
        style="@style/Tella_Main_White_Text.Meduim"
        android:gravity="center"
        tools:text="Test"
        android:layout_marginTop="24dp"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_delete_outline_white_24" />

</androidx.constraintlayout.widget.ConstraintLayout>