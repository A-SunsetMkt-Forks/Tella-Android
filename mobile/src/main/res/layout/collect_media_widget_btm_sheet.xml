<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drag_anchor_drawable"
    android:paddingTop="@dimen/activity_vertical_large_margin"
    android:paddingBottom="@dimen/activity_vertical_large_margin"
    android:paddingStart="@dimen/activity_horizontal_large_margin"
    android:paddingEnd="@dimen/activity_horizontal_large_margin"
    app:behavior_hideable="true">

    <!-- todo: add btm sheet padding in res -->

    <TextView
        android:id="@+id/title"
        style="@style/Tella2_White_Bold_Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Upload something"/>

    <TextView
        android:id="@+id/description"
        style="@style/Tella2_Gray_Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_small_margin"
        tools:text="Choose how you want to upload your something"/>

    <TextView
        android:id="@+id/take_from"
        style="@style/Tella2_Gray_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginTop="@dimen/activity_vertical_larger_margin"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        app:drawableStartCompat="@drawable/ic_camera_alt_24px_filled"
        android:text="Take from camera"
        android:visibility="visible"/>

    <!-- todo: string resources in this file -->

    <TextView
        android:id="@+id/record_audio"
        style="@style/Tella2_Gray_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginTop="@dimen/activity_vertical_larger_margin"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        app:drawableStartCompat="@drawable/ic_mic_white"
        android:text="Record with AudioRecorder"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/choose_from_vault"
        style="@style/Tella2_Gray_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/take_from"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        app:drawableStartCompat="@drawable/gallery_white"
        android:text="Chose from Tella files"/>

    <TextView
        android:id="@+id/choose_from_device"
        style="@style/Tella2_Gray_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_from_vault"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        app:drawableStartCompat="@drawable/ic_phone"
        android:text="Chose from your device"/>

</androidx.constraintlayout.widget.ConstraintLayout>
