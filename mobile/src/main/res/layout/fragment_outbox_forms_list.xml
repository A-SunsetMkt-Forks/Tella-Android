<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draftFormView"
    style="@style/Tella2_Forms_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rs.readahead.washington.mobile.views.fragment.DraftFormsListFragment">

    <!-- view shown where we have forms -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/not_empty_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/outbox_forms_title"
            style="@style/Tella2_Gray_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pendingFormInstances"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="These are forms you have not submitted. Tap on a form to continue working on it."/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pendingFormInstances"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:clipToPadding="false"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outbox_forms_title"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- view shown where we do not have forms -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/empty_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- todo: put real image here and set paddings/spacings -->
        <ImageView
            android:id="@+id/nothing"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nothing_message"
            app:layout_constraintVertical_chainStyle="packed"
            android:src="@drawable/ic_baseline_white_star_outline_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nothing_message"
            style="@style/Tella2_White_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nothing"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:text="Your Outbox is currently empty. Forms that have not completed sending will appear here."/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
